<div class="container">
  <div class="row">
    <div class="col-xs-3">
    </div>
    <div class="col-xs-5">
      <%= yield %>

      
      <ul class="nav nav-tabs" role="tablist">
        <li><%= link_to 'My Exercises', exercises_path %> </li>
        <li><%= link_to 'New Exercise', :controller => "exercises", :action => "new" %></li>
        <li class="active"><%= link_to 'All Exercises', sample_exercises_path %></li>
      </ul>


      <title> All Exercises | Weight Lifting Pro</title>
      <h3>All  Exercises</h3>

      <table class ="table table-striped table-hover">
        <thead>
        <tr>
          <th>Name</th>
          <th colspan="3"></th>
        </tr>
        </thead>

        <tbody>


        <% @sample_exercises.each do |exercise| %>
            <tr>
              <td>
          <%= exercise.name %>

              </td>

              <td> <%= button_to 'Add Exercise', new_exercise_path(:sample_exercise_id => exercise.id), class: 'btn btn-success btn-sm' %>
              </td>
            </tr>
        <% end %>

        </tbody>
      </table>
      <br />

      <div class="row">
        <div class="col-md-10">
          <%= link_to 'My Exercises', exercises_path, style: "color: white", class: 'btn btn-primary' %>
        </div>

        <div class="col-xs-1">
          <%= link_to "Back", :back %>

        </div>
      </div>
    </div>
  </div>
</div>

