<Title>Sign Up | Weight Lifting Pro</Title>

<div class="container">
<h2>Sign up</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <!--Must use simple form for f.error notices-->
  <%= f.error_notification %>
      <%= devise_error_messages! %>

  <div class="form-inputs">
    <%= f.input :fname, required: true, label: 'First Name'  %>
    <%= f.input :lname, optional: true, label: 'Last Name' %>
    <%= f.input :email, required: true, autofocus: true, label: 'Email' %>
    <%= f.input :body_weight, optional: true, label: 'Body Weight (in lbs)', autofocus: true %>
    <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum " if
                                 @minimum_password_length) %>
    <%= f.input :password_confirmation, required: true %>

  </div>

      <div class="field">
      <p>
        <%= f.label "Birthday"%>
        <br>
        <%= f.date_select :dob, required: true, start_year: 1920, end_year: 2015, default: 18.years.ago, autofocus:
            true %>
      </p>

        <p>
          <%= f.radio_button :gender, 'Female'%>
          <%= f.label :female %>
          <%= f.radio_button :gender, 'Male'%>
          <%= f.label :male %>
        </p>

      </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign up", class: "btn btn-primary btn-md" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
    </div>
