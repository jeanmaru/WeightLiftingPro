<Title>Edit Account | Weight Lifting Pro</Title>

<div class="container">
<h2>Edit <%= resource_name.to_s.humanize %></h2>

  
  <%= form_for(@user, :url => registration_path(@user)) do |f| %>
      <% if @user.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

            <ul>
              <% @user.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
      <% end %>

      <div class="field form-group">

        <br />
          <%= f.label "First Name" %> <br />
          <%= f.text_field :fname, :style => "width:20%", autofocus: true %>

        <br />
          <%= f.label "Last Name" %> <br />
          <%= f.text_field :lname, :style => "width:20%", autofocus: true %>

        
        <br />
          <%= f.label :email %><br />
          <%= f.email_field :email, :style => "width:20%", autofocus: true %>
        
        
    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
    <% end %>
        
        <br />
          <%= f.label :password %> <br /> <i>(leave blank if you don't want to change it)</i><br />
          <%= f.password_field :password, :style => "width:20%", autocomplete: "off" %>
        

        <br />
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, :style => "width:20%", autocomplete: "off" %>
        
        <br />
        <br />        
        <br />
</div>

        <div class="field form-group">
          <%= f.label :body_weight %> <br>
          <%= f.number_field :body_weight, required: true, autofocus: true, min: 100, max: 800 %>
          <%= f.select(:measure, options_for_select([['lbs'], ['kg']], @user.measure), :selected => @user.measure) %>
        </div>

        
        
        <br />

        <div class="field form-group">
          <%= f.radio_button :level, 'Beginner'%>
          <%= f.label :beginner %>
          <%= f.radio_button :level, 'Intermediate'%>
          <%= f.label :intermediate %>
          <%= f.radio_button :level, 'Advanced'%>
          <%= f.label :advanced %>
        </div>

        <br />

          <div class="field form-group">


          <%= f.label "Birthday"%>
          <br>
          <%= f.date_select :dob, required: true, start_year: 1920, end_year: 2015, default: 18.years.ago, autofocus:
                                        true %>


        <br />
        <br />
        
        <%= f.radio_button :gender, 'Female'%>
          <%= f.label :female %>
          <%= f.radio_button :gender, 'Male'%>
          <%= f.label :male %>
      </div>
      
      <br />
      
      <div class="actions">
        <%= f.submit "Update", class:"btn btn-primary", :style=>'width: 235px;' %>
      </div>
      
      
<% end %>
<br>
  <br>
<h4>Cancel my account</h4>

<p> <strong>Unhappy? </strong> <%= button_to "Cancel My Account", registration_path(resource_name), class:"btn
btn-danger", data: {confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>
</div>
