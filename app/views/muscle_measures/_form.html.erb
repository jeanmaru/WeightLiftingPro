  </div>

    <div class="field form-group">
    <%= f.label :chest %><br>
    <%= f.number_field :chest, min: 0, max: 200, step: 0.25, :style => "width:40%", autofocus: true,  class: 'form-control'  %>
  </div>

    <div class="field form-group">
    <%= f.select(:unit, options_for_select([['in'], ['cm']], @muscle_measure.unit)) %>
    </div>
    <div class="actions">
    <%= f.submit 'Create!', :class => "btn btn-md btn-primary", :style=>'width: 160px' %>
