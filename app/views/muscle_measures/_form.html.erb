  </div>
    <div class="field form-group">
    <%= f.label :upper_arm_right %><br>
    <%= f.number_field :upper_arm_right, min: 0, max: 100, step: 0.25, :style => "width:40%", autofocus: true,  class: 'form-control'  %>
  </div>
    <div class="field form-group">
    <%= f.label :thigh_left %><br>
    <%= f.number_field :thigh_left, min: 0, max: 200, step: 0.25, :style => "width:40%", autofocus: true,  class: 'form-control'  %>
  </div>
  <div class="field">
    <%= f.label :thigh_right %><br>
    <%= f.number_field :thigh_right, min: 0, max: 200, step: 0.25, :style => "width:40%", autofocus: true,  class: 'form-control'  %>
  </div>
    <div class="field form-group">
    <%= f.label :calf_left %><br>
    <%= f.number_field :calf_left, min: 0, max: 100, step: 0.25, :style => "width:40%", autofocus: true,  class: 'form-control'  %>
  </div>
    <div class="field form-group">
    <%= f.label :calf_right %><br>
    <%= f.number_field :calf_right, min: 0, max: 100, step: 0.25, :style => "width:40%", autofocus: true,  class: 'form-control'  %>
