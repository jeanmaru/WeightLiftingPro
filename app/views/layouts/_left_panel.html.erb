    <h4>
     <strong> <%= current_user.fname %></strong> 
    </h4>
 <hr>
    
    
    <% if @user.dob.present? %>
    <h5>
      <% case current_user.gender
           when 'Female' %>
          <i class="fa fa-female" aria-hidden="true"></i>
          <%= "#{pluralize(age(@user.dob), 'year')} old" %>

      <%  when 'Male' %>
          <i class="fa fa-male" aria-hidden="true"></i>
          <%= "#{pluralize(age(@user.dob), 'year')} old" %>
          
        <% end %>
    </h5>
        <% end %>
    
    <hr>
    
    <h5>
      <%= fa_icon 'dashboard' %>
       <%= @user.body_weight.to_i %> <%= @user.measure %>
    </h5>

    <hr>
    
    <h5>
          <% case current_user.level
               when 'Beginner' %>
          <div class="progress">
            <div class="progress-bar progress-bar-warning" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="min-width: 5em;">
              <%= @user.level %>
            </div>
          </div>

          <%  when 'Intermediate' %>
          <div class="progress">
            <div class="progress-bar" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="min-width: 9em;">
              <%= @user.level %>
            </div>
          </div>
          
          <%  when 'Advanced' %>
          <div class="progress">
            <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="95" aria-valuemin="0" aria-valuemax="100" style="width: 95%;">
              <%= @user.level %>

            </div>
          </div>
                  
          <% end %> 

    </h5>
    
    <hr>
    <ul class="nav">
    <li>
      <%= link_to edit_user_registration_path do %>
          <i class="fa fa-pencil-square-o" aria-hidden="true"> Edit User</i><% end %>
    </li>
      
    <hr>
      <li>
        <%= link_to reports_url do %>
            <i class="fa fa-list-ul" aria-hidden="true">  Reports </i><% end %>
      </li>

      <hr>
      <li>
        <%= link_to muscle_measures_url do %>
            <i class="fa fa-arrows-h" aria-hidden="true">  Measurements </i><% end %>
      </li>
    
    <hr>
    <li>
      <%= link_to calculator_url do %>
          <i class="fa fa-calculator" aria-hidden="true"> Unit Converter </i><% end %>
    </li>
    </ul>

