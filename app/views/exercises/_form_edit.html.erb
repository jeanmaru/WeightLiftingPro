<div class="row">
  <div class="col-md-6 col-md-offset-3">

    <%= form_for(@exercise, html: {class: 'form-horizontal'}) do |f| %>
        <% if @exercise.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@exercise.errors.count, "error") %> prohibited this exercise from being saved:</h2>

              <ul>
                <% @exercise.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
              </ul>
            </div>
        <% end %>
        
        <div class=" field form-group">
          <h4><strong> <%= @exercise.sample_exercise.name %> </strong></h4>
        </div>

        <div class=" field form-group">
          <%= f.label :routine_id, "Add to a Routine:" %> <br>
          <%= f.collection_select :routine_id,  current_user.routines(current_user).order('name ASC'), :id, :name, include_blank: "Select a Routine", class: 'form-control' %>
        </div>

        <div class="field form-group">
          <%= f.label :notes %>
          <%= f.text_area :notes, class: 'form-control' %>
        </div>


        <div class="actions form-group">
          <%= f.submit :class => "btn btn-md btn-primary", :style=>'width: 275px' %>
        </div>


        </div>
        </div>
    <% end %>

